<%- include('partials/header') %>
<div class="card" style="max-width:720px;margin:10px auto;">
	<h3>Shop Settings</h3>
	<form class="grid" method="post" enctype="multipart/form-data" action="/admin/settings">
		<label>Shop Name
			<input class="input" type="text" name="shopName" value="<%= (settings && settings.shop_name) || '' %>" required />
		</label>
		<label>Shop Contact
			<input class="input" type="text" name="shopContact" value="<%= (settings && settings.shop_contact) || '' %>" />
		</label>
		<div class="grid grid-2">
			<label>Logo Image
				<input class="input" type="file" name="shopLogo" accept="image/*" />
			</label>
			<label>QR Code Image
				<input class="input" type="file" name="qrImage" accept="image/*" />
			</label>
			<label>Home Banner Image
				<input class="input" type="file" name="heroImage" accept="image/*" />
			</label>
		</div>
		<div class="flex" style="gap:20px;align-items:center;">
			<div>
				<div class="muted">Current Logo</div>
				<% if (settings && settings.logo_url) { %>
					<img src="<%= settings.logo_url %>" alt="logo" style="height:56px;object-fit:contain;"/>
				<% } else { %>
					<span class="muted">None</span>
				<% } %>
			</div>
			<div>
				<div class="muted">Current QR</div>
				<% if (settings && settings.qr_url) { %>
					<img src="<%= settings.qr_url %>" alt="qr" style="height:56px;object-fit:contain;"/>
				<% } else { %>
					<span class="muted">None</span>
				<% } %>
			</div>
			<div>
				<div class="muted">Current Home Banner</div>
				<% if (settings && settings.hero_url) { %>
					<img src="<%= settings.hero_url %>" alt="hero" style="height:56px;object-fit:cover;aspect-ratio:3/1;border:1px solid #e5e7eb;border-radius:6px;"/>
				<% } else { %>
					<span class="muted">None</span>
				<% } %>
			</div>
		</div>
		<button class="btn mt-3">Save Settings</button>
	</form>
</div>
<%- include('partials/footer') %>


